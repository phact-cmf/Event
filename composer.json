  "homepage": "https://github.com/phact-cmf/Event",
  "license": "MIT",
  "authors": [
    {
      "name": "Anton Okulov",
      "email": "qantus@mail.ru",
      "homepage": "https://github.com/AntonOkulov",
      "role": "Developer"
    },
    {
      "name": "Maxim Korobitsyn",
      "email": "dog.mixer@gmain.com",
      "homepage": "https://github.com/tsukasa-mixer",
