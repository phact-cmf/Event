  "require": {
    "php": ">=7.2",
    "psr/event-dispatcher": "^1.0",
    "psr/container": "^1.0"
  },
  "require-dev": {
    "roave/security-advisories": "dev-master",
    "phpunit/phpunit": "^8",
    "squizlabs/php_codesniffer": "^3.5"
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "Phact\\Event\\": "",
      "Tests\\": "Tests"
    },
    "exclude-from-classmap": [
      "/Tests/"
    ]
  }
